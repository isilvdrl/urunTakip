@using urunTakip.Models.Entity
@model List<tblKategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KATEGORI ADI</th>
        <th>SIL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td><a href="/Category/KategoriSil/@x.id" class="btn btn-danger">SIL</a></td>
            <td><a href="/Category/KategoriGetir/@x.id" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Category/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>