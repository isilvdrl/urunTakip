@using urunTakip.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<tblSatislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tblUrunler.ad</td>
            <td>@x.tblPersonel.ad @x.tblPersonel.soyad </td>
            <td>@x.tblMusteri.ad @x.tblMusteri.soyad </td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>

        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Satislar/YeniSatis/" class="btn btn-primary">Yeni Satis Ekle</a>

