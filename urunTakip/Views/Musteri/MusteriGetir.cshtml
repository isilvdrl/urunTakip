@model urunTakip.Models.Entity.tblMusteri
@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("MusteriGuncelle", "Musteri", FormMethod.Post))
{
    <br />
    @Html.HiddenFor(x => x.id, new { @class = "form-control" })

    <label>Ad</label><br />
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" }) <br />
    <label>Soyad</label><br />
    @Html.TextBoxFor(x => x.soyad, new { @class = "form-control" }) <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.sehir, new { @class = "form-control" }) <br />
    <label>Bakiye</label><br />
    @Html.TextBoxFor(x => x.bakiye, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Güncelle</button>
}
