@using urunTakip.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<tblMusteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>BAKİYE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.sehir</td>
            <td>@x.bakiye</td>

            <td><a href="/Musteri/MusteriSil/@x.id" class="btn btn-danger">SIL</a></td>
            <td><a href="/Musteri/MusteriGetir/@x.id" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa =>Url.Action("Index",new{sayfa}))
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
