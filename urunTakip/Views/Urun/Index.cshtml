@using urunTakip.Models.Entity
@model List<tblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün Adı:@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORI ADI</th>
        <th>SIL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.marka</td>
            <td>@x.stok</td>
            <td>@x.alisfiyat</td>
            <td>@x.satisfiyat</td>
            <td>@x.kategori</td>
            <td><a href="/Urun/UrunSil/@x.id" class="btn btn-danger">SIL</a></td>
            <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Urun Ekle</a>